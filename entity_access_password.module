 */
function entity_access_password_entity_view_mode_alter(string &$view_mode, EntityInterface $entity) : void {
  // Quick return to avoid instanciation.
  if ($view_mode == EntityViewModeAlterHookHandler::PROTECTED_VIEW_MODE) {
    return;
  }

  // @todo
}
